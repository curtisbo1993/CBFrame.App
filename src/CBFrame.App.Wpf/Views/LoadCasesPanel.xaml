<UserControl x:Class="CBFrame.App.Wpf.Views.LoadCasesPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DockPanel Margin="12">
        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Top"
                    Margin="0 0 0 10">
            <Button Content="Add"
                    Command="{Binding AddCaseCommand}"
                    Margin="0 0 10 0" />
            <Button Content="Delete"
                    Command="{Binding DeleteCaseCommand}"
                    Margin="0 0 10 0" />
            <Button Content="Defaults"
                    Command="{Binding GenerateDefaultsCommand}" />
        </StackPanel>

        <!-- Grid of load cases -->
        <DataGrid ItemsSource="{Binding LoadCases}"
                  SelectedItem="{Binding Selected}"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"
                                    Binding="{Binding Id}"
                                    Width="40"
                                    IsReadOnly="True" />
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding Name}"
                                    Width="*" />
                <!-- Type combo box using LoadCaseTypes from the view-model -->
                <DataGridComboBoxColumn Header="Type"
                                        SelectedItemBinding="{Binding Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        ItemsSource="{Binding DataContext.LoadCaseTypes,
                                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Width="110" />
                <DataGridCheckBoxColumn Header="SelfWt"
                                        Binding="{Binding IncludeSelfWeight}"
                                        Width="70" />
                <DataGridTextColumn Header="SW Fac"
                                    Binding="{Binding SelfWeightFactor}"
                                    Width="70" />
                <DataGridCheckBoxColumn Header="Active"
                                        Binding="{Binding IsActive}"
                                        Width="60" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
