<UserControl x:Class="CBFrame.App.Wpf.Views.Model3DView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Focusable="True"
             MouseLeftButtonDown="Viewport_MouseLeftButtonDown"
             MouseMove="Viewport_MouseMove">
    <Border Background="{DynamicResource PanelBackgroundBrush}">
        <!-- Simple 2D “viewport” for now -->
        <Canvas x:Name="SceneCanvas"
                Background="{DynamicResource PanelBackgroundBrush}" />
    </Border>
</UserControl>
