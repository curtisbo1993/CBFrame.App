<Window x:Class="CBFrame.App.Wpf.Views.Dialogs.MaterialSelectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Material"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        MinWidth="650"
        MinHeight="350"
        ResizeMode="CanResizeWithGrip">

    <DockPanel Margin="12">

        <!-- Filter row -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="0,0,0,8">
            <TextBlock Text="Filter:"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0" />
            <TextBox Width="220"
                     VerticalAlignment="Center"
                     Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!-- Materials grid -->
        <DataGrid ItemsSource="{Binding MaterialsView}"
                  SelectedItem="{Binding SelectedMaterial, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Margin="0,0,0,8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="*" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*" />
                <DataGridTextColumn Header="Type" Binding="{Binding MaterialType}" Width="*" />
                <DataGridTextColumn Header="E" Binding="{Binding E}" Width="*" />
                <DataGridTextColumn Header="G" Binding="{Binding G}" Width="*" />
                <DataGridTextColumn Header="Density" Binding="{Binding Density}" Width="*" />
                <DataGridTextColumn Header="Fy" Binding="{Binding Fy}" Width="*" />
                <DataGridTextColumn Header="Fu" Binding="{Binding Fu}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="OK"
                    Width="80"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Command="{Binding OkCommand}" />
            <Button Content="Cancel"
                    Width="80"
                    IsCancel="True"
                    Command="{Binding CancelCommand}" />
        </StackPanel>

    </DockPanel>
</Window>
