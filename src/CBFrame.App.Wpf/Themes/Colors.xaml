<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Base background (the “desk”) -->
    <Color x:Key="CbBackgroundMainColor">#FF1E1F22</Color>
    <SolidColorBrush x:Key="CbBackgroundMainBrush" Color="{StaticResource CbBackgroundMainColor}"/>

    <!-- Cards -->
    <SolidColorBrush x:Key="CbCardBrush"        Color="#232528"/>
    <SolidColorBrush x:Key="CbInnerCardBrush"   Color="#2A2C30"/>
    <SolidColorBrush x:Key="CbRibbonCardBrush"  Color="#232528"/>
    <SolidColorBrush x:Key="CbStatusCardBrush"  Color="#232528"/>

    <!-- Viewport (inside the 3D View card) -->
    <SolidColorBrush x:Key="CbViewportBackgroundBrush" Color="#18191F"/>
    <SolidColorBrush x:Key="CbViewportStripBrush"      Color="#222327"/>
    <SolidColorBrush x:Key="CbViewportBorderBrush"     Color="#141518"/>

    <!-- Ribbon tabs / separators -->
    <SolidColorBrush x:Key="CbRibbonTabInactiveBrush" Color="#26272B"/>
    <SolidColorBrush x:Key="CbRibbonTabActiveBrush"   Color="#323338"/>
    <SolidColorBrush x:Key="CbRibbonTabHoverBrush"    Color="#3A3A3A" Opacity="0.6"/>
    <SolidColorBrush x:Key="CbRibbonSeparatorBrush"   Color="#3A3B40"/>

    <!-- Text -->
    <SolidColorBrush x:Key="CbTextPrimaryBrush"   Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CbTextSecondaryBrush" Color="#D0D0D0"/>

    <!-- Accent -->
    <SolidColorBrush x:Key="CbAccentPurpleBrush" Color="#A64DFF"/>

    <!-- Subtle card strokes -->
    <SolidColorBrush x:Key="CbCardStrokeBrush"       Color="#33FFFFFF"/>
    <SolidColorBrush x:Key="CbInnerCardStrokeBrush"  Color="#22FFFFFF"/>

</ResourceDictionary>
