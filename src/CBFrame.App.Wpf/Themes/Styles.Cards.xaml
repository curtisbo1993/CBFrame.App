<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===================== SHADOW EFFECT RESOURCE ===================== -->
    <DropShadowEffect x:Key="CbPanelShadow"
                      Color="#000000"
                      BlurRadius="18"
                      ShadowDepth="4"
                      Opacity="0.28"
                      RenderingBias="Quality" />

    <!-- ===================== CARD CONTAINERS ===================== -->

    <!-- Outer cards (Model Explorer, 3D View, Data Entry, Status bar, etc.) -->
    <Style x:Key="CbCardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CbCardBrush}"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="BorderBrush" Value="{StaticResource CbRibbonSeparatorBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>

        <!-- 🔥 NEW: Beautiful Figma-style shadow -->
        <Setter Property="Effect" Value="{StaticResource CbPanelShadow}"/>
    </Style>

    <!-- Outer-left card (Model Explorer) -->
    <Style x:Key="CbCardBorderLeftStyle"
           TargetType="Border"
           BasedOn="{StaticResource CbCardBorderStyle}">
        <Setter Property="CornerRadius" Value="6,0,0,6"/>
    </Style>

    <!-- Center card (3D View) -->
    <Style x:Key="CbCardBorderCenterStyle"
           TargetType="Border"
           BasedOn="{StaticResource CbCardBorderStyle}">
        <Setter Property="CornerRadius" Value="0"/>
    </Style>

    <!-- Outer-right card (Data Entry) -->
    <Style x:Key="CbCardBorderRightStyle"
           TargetType="Border"
           BasedOn="{StaticResource CbCardBorderStyle}">
        <Setter Property="CornerRadius" Value="0,6,6,0"/>
    </Style>

    <Style x:Key="CbInnerCardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CbInnerCardBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="BorderBrush" Value="{StaticResource CbRibbonSeparatorBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>

        <!-- 🔥 NEW: Soft inset shadow for inner groups -->
        <Setter Property="Effect" Value="{StaticResource CbPanelShadow}"/>
    </Style>

    <!-- 3D viewport outer border -->
    <Style x:Key="CbViewportBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CbBackgroundMainBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CbRibbonSeparatorBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- ===================== HEADERS / TEXT ====================== -->

    <!-- Card titles like “Model Explorer”, “3D View”, “Data Entry” -->
    <Style x:Key="CbCardHeaderTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource CbTextPrimaryBrush}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- ======================= PILL BUTTONS ====================== -->

    <!-- Small rounded buttons (Grids / Labels / Axes / Snap, Mode pill) -->
    <Style x:Key="CbPillButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource CbStatusCardBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource CbTextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CbRibbonSeparatorBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="999"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background"
                                    Value="{StaticResource CbInnerCardBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background"
                                    Value="{StaticResource CbAccentPurpleBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
