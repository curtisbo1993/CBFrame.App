<Application x:Class="CBFrame.App.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CBFrame.App.Wpf"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Fluent;Component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- 2. Our custom dark shell brushes (can override Fluent where needed) -->
            <Color x:Key="AppBackgroundColor">#FF1E1E23</Color>
            <Color x:Key="PanelBackgroundColor">#FF26262C</Color>
            <Color x:Key="ViewportBackgroundColor">#FF1A1A1F</Color>
            <Color x:Key="RibbonBackgroundColor">#FF2E3B4E</Color>
            <Color x:Key="StatusBarBackgroundColor">#FF18181C</Color>
            <Color x:Key="ForegroundColor">#FFF0F0F0</Color>
            <Color x:Key="StatusBarForegroundColor">#FFB0B0B0</Color>

            <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackgroundColor}" />
            <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}" />
            <SolidColorBrush x:Key="ViewportBackgroundBrush" Color="{StaticResource ViewportBackgroundColor}" />
            <SolidColorBrush x:Key="RibbonBackgroundBrush" Color="{StaticResource RibbonBackgroundColor}" />
            <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="{StaticResource StatusBarBackgroundColor}" />
            <SolidColorBrush x:Key="PanelForegroundBrush" Color="{StaticResource ForegroundColor}" />
            <SolidColorBrush x:Key="StatusBarForegroundBrush" Color="{StaticResource StatusBarForegroundColor}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
