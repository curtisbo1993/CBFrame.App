<Window x:Class="CBFrame.App.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fluent="urn:fluent-ribbon"
        Title="cb_FRAME – Structural Analysis"
        Height="720"
        Width="1280"
        Background="{DynamicResource AppBackgroundBrush}">
    <Grid>
        <!-- Layout: Ribbon / Content / Status bar -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Ribbon -->
            <RowDefinition Height="*"/>
            <!-- Main content -->
            <RowDefinition Height="Auto"/>
            <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- RIBBON -->
        <fluent:Ribbon Grid.Row="0">
            <fluent:Ribbon.Menu>
                <fluent:Backstage>
                    <fluent:BackstageTabItem Header="File">
                        <StackPanel Margin="16">
                            <TextBlock Text="File actions will go here (New, Open, Save...)"
                                       Foreground="{DynamicResource PanelForegroundBrush}" />
                        </StackPanel>
                    </fluent:BackstageTabItem>
                </fluent:Backstage>
            </fluent:Ribbon.Menu>

            <!-- MAIN RIBBON TABS -->

            <!-- Home tab -->
            <fluent:RibbonTabItem Header="Home">
                <fluent:RibbonGroupBox Header="Model">
                    <fluent:Button Header="New Frame"
                                   LargeIcon="{x:Null}"
                                   ToolTip="Create a new frame model (placeholder)"
                                   IsEnabled="False"/>
                    <fluent:Button Header="Open"
                                   LargeIcon="{x:Null}"
                                   ToolTip="Open an existing model (placeholder)"
                                   IsEnabled="False"/>
                </fluent:RibbonGroupBox>

                <fluent:RibbonGroupBox Header="View">
                    <fluent:Button Header="Reset View"
                                   LargeIcon="{x:Null}"
                                   ToolTip="Reset the 3D view (placeholder)"
                                   IsEnabled="False"/>
                    <fluent:Button Header="Zoom Extents"
                                   LargeIcon="{x:Null}"
                                   ToolTip="Zoom to extents (placeholder)"
                                   IsEnabled="False"/>
                </fluent:RibbonGroupBox>

                <fluent:RibbonGroupBox Header="Panels">
                    <fluent:ToggleButton Header="Explorer"
                                         IsChecked="True"
                                         ToolTip="Toggle Explorer panel (placeholder)"
                                         IsEnabled="False"/>
                    <fluent:ToggleButton Header="Properties"
                                         IsChecked="True"
                                         ToolTip="Toggle Properties panel (placeholder)"
                                         IsEnabled="False"/>
                </fluent:RibbonGroupBox>
            </fluent:RibbonTabItem>

            <!-- Analyze tab (future) -->
            <fluent:RibbonTabItem Header="Analyze">
                <fluent:RibbonGroupBox Header="Analysis">
                    <fluent:Button Header="Run Analysis"
                                   LargeIcon="{x:Null}"
                                   ToolTip="Run structural analysis (placeholder)"
                                   IsEnabled="False"/>
                </fluent:RibbonGroupBox>
            </fluent:RibbonTabItem>

            <!-- Help tab -->
            <fluent:RibbonTabItem Header="Help">
                <fluent:RibbonGroupBox Header="About">
                    <fluent:Button Header="About cb_FRAME"
                                   LargeIcon="{x:Null}"
                                   ToolTip="About dialog (placeholder)"
                                   IsEnabled="False"/>
                </fluent:RibbonGroupBox>
            </fluent:RibbonTabItem>
        </fluent:Ribbon>

        <!-- MAIN CONTENT AREA: Left / Center / Right panels -->
        <Grid Grid.Row="1" Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <!-- Left panel: Explorer -->
                <ColumnDefinition Width="*"/>
                <!-- Center: 3D viewport -->
                <ColumnDefinition Width="320"/>
                <!-- Right: Properties/Data -->
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL (Explorer placeholder) -->
            <Border Grid.Column="0"
                    Margin="0,0,4,0"
                    Background="{DynamicResource PanelBackgroundBrush}">
                <TextBlock Text="Explorer Panel (placeholder)"
                           Margin="8"
                           Foreground="{DynamicResource PanelForegroundBrush}"
                           VerticalAlignment="Top"
                           FontWeight="SemiBold"/>
            </Border>

            <!-- CENTER PANEL (3D viewport placeholder) -->
            <Border Grid.Column="1"
                    Background="{DynamicResource ViewportBackgroundBrush}">
                <TextBlock Text="3D Viewport Placeholder"
                           Foreground="{DynamicResource PanelForegroundBrush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="20"
                           FontWeight="SemiBold"/>
            </Border>

            <!-- RIGHT PANEL (Properties / Data Entry placeholder) -->
            <Border Grid.Column="2"
                    Margin="4,0,0,0"
                    Background="{DynamicResource PanelBackgroundBrush}">
                <StackPanel Margin="8">
                    <TextBlock Text="Right Panels (placeholder)"
                               Foreground="{DynamicResource PanelForegroundBrush}"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Properties / Data Entry will live here."
                               Margin="0,4,0,0"
                               Foreground="{DynamicResource PanelForegroundBrush}"
                               Opacity="0.7"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- STATUS BAR -->
        <StatusBar Grid.Row="2"
                   Background="{DynamicResource StatusBarBackgroundBrush}"
                   Foreground="{DynamicResource StatusBarForegroundBrush}">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}" />
            </StatusBarItem>

            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding RightStatusText}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
